<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="CENTER" prefHeight="400.0" prefWidth="400.0" spacing="20.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.javafx24.controller.HelloController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <children>
      <Label alignment="TOP_CENTER" contentDisplay="CENTER" layoutX="179.0" layoutY="30.0" style="-fx-font-weight: bold" text=" Current Score: ">
         <font>
            <Font size="20.0" />
         </font></Label>
      <HBox alignment="CENTER" prefHeight="30.0" prefWidth="100.0" spacing="160.0">
         <children>
             <Label fx:id="scoreXLabel" alignment="CENTER_LEFT" style="-fx-font-weight: bold" text="X: 0">
               <font>
                  <Font size="20.0" />
               </font>
            </Label>
             <Label fx:id="scoreOLabel" alignment="CENTER_RIGHT" contentDisplay="RIGHT" style="-fx-font-weight: bold" text="O: 0">
               <font>
                  <Font size="20.0" />
               </font>
            </Label>
         </children>
      </HBox>
       <GridPane gridLinesVisible="true" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" scaleX="0.9" scaleY="1.05" VBox.vgrow="ALWAYS">
        <columnConstraints>
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>

          <Button fx:id="button1" onAction="#buttonClicked" style="-fx-background-color: transparent; -fx-pref-width: 100; -fx-pref-height: 100;" GridPane.columnIndex="0" GridPane.rowIndex="0" />
          <Button fx:id="button2" onAction="#buttonClicked" style="-fx-background-color: transparent; -fx-pref-width: 100; -fx-pref-height: 100;" GridPane.columnIndex="1" GridPane.rowIndex="0" />
          <Button fx:id="button3" onAction="#buttonClicked" style="-fx-background-color: transparent; -fx-pref-width: 100; -fx-pref-height: 100;" GridPane.columnIndex="2" GridPane.rowIndex="0" />
          <Button fx:id="button4" onAction="#buttonClicked" style="-fx-background-color: transparent; -fx-pref-width: 100; -fx-pref-height: 100;" GridPane.columnIndex="0" GridPane.rowIndex="1" />
          <Button fx:id="button5" onAction="#buttonClicked" style="-fx-background-color: transparent; -fx-pref-width: 100; -fx-pref-height: 100;" GridPane.columnIndex="1" GridPane.rowIndex="1" />
          <Button fx:id="button6" onAction="#buttonClicked" style="-fx-background-color: transparent; -fx-pref-width: 100; -fx-pref-height: 100;" GridPane.columnIndex="2" GridPane.rowIndex="1" />
          <Button fx:id="button7" onAction="#buttonClicked" style="-fx-background-color: transparent; -fx-pref-width: 100; -fx-pref-height: 100;" GridPane.columnIndex="0" GridPane.rowIndex="2" />
          <Button fx:id="button8" onAction="#buttonClicked" style="-fx-background-color: transparent; -fx-pref-width: 100; -fx-pref-height: 100;" GridPane.columnIndex="1" GridPane.rowIndex="2" />
          <Button fx:id="button9" onAction="#buttonClicked" style="-fx-background-color: transparent; -fx-pref-width: 100; -fx-pref-height: 100;" GridPane.columnIndex="2" GridPane.rowIndex="2" />
      </GridPane>
      <Button mnemonicParsing="false" onAction="#resetBoard" text="Reset Game">
         <font>
            <Font size="15.0" />
         </font></Button>
   </children>
</VBox>
